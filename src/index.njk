---
layout: layouts/base.html.njk
---
<main>
	<h1>{{ site.title }}</h1>
	<dl class="stack-lg">
		{%- set privateCount = 0 -%}
		{%- for endpoint in collections.endpoints -%}
			{%- if not endpoint.data.private -%}
				<div class="stack">
					<dt>
						<a href="{{ endpoint.url }}">{{ endpoint.url }}</a>

						{% if endpoint.data.deprecated %}
							<span class="badge">Deprecated</span>
						{%- endif -%}
					</dt>
					<dd>
						{%- if endpoint.data.description -%}
							{{ endpoint.data.description | renderMarkdown | safe }}
						{%- endif -%}

						<span class="metadata">Updated {{ endpoint.page.date.toLocaleString('en-US', {
							year: "numeric",
							month: "short",
							day: "numeric"
						} ) }}</span>
					</dd>
				</div>
			{%- else -%}
				{%- set privateCount = privateCount + 1 -%}
			{%- endif -%}
		{%- endfor -%}
	</dl>

	{%- if privateCount > 0 -%}
		<hr>
		<p><small>There {{ "is" if privateCount == 1 else "are" }} {{ privateCount }} additional private {{ "endpoint" if privateCount == 1 else "endpoints" }} which can be accessed directly. See <a href="{{ pkg.repository.url }}">source repo</a> for URLs.</small></p>
	{%- endif -%}
</main>

